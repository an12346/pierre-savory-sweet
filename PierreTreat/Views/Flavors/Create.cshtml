@{
  Layout = "_Layout";
}

@model PierreTreat.Models.Flavor

<h4>Add a new flavor</h4>
<hr />
@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.FlavorType)
    @Html.TextBoxFor(model => model.FlavorType)

    @Html.Label("Select treat")
    @Html.DropDownList("TreatId")

    <input type="submit" value="Add new flavor" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all flavors", "Index")</p>