@{
  Layout = "_Layout";
}

@model PierreTreat.Models.Flavor

<h2>Edit this Flavor: @Html.DisplayFor(model => model.FlavorType)</h2>
<hr />
@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.FlavorId)
  @Html.LabelFor(model => model.FlavorType)
  @Html.EditorFor(model => model.FlavorType)

  @Html.Label("Select treat")
  @Html.DropDownList("TreatId")

  <input type="submit" value="Save"/>
}

<h4>@Html.ActionLink("Back to Flavors", "Index")</h4>